---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="topbar">
  <div class="headerLeft">
    <h1 class="title">{title}</h1>
    <slot name="left-extra" />
  </div>
  <div class="avatarBtn">
    <svg
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#fff"
      stroke-width="1.8"
    >
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>
    </svg>
  </div>
</div>

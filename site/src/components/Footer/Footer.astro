---
import { Image } from "astro:assets";
import logoImg from "@/assets/img/logo.webp";
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__info">
        <div class="footer__logo">
          <Image src={logoImg} alt="InfoCoffee Logo" class="footer__logo-img" />
          <span>InfoCoffe</span>
        </div>
        <p class="footer__tagline">Умное управление кофейней в вашем кармане.</p>
      </div>
      
      <div class="footer__nav">
        <div class="footer__col">
          <h4 class="footer__title">Продукт</h4>
          <ul class="footer__list">
            <li><a href="#finance">Финансы</a></li>
            <li><a href="#analytics">Аналитика</a></li>
            <li><a href="#stock">Склад</a></li>
          </ul>
        </div>
        
        <div class="footer__col">
          <h4 class="footer__title">Компания</h4>
          <ul class="footer__list">
            <li><a href="#">О нас</a></li>
            <li><a href="#faq">FAQ</a></li>
            <li><a href="#">Контакты</a></li>
          </ul>
        </div>
        
        <div class="footer__col">
          <h4 class="footer__title">Соцсети</h4>
          <ul class="footer__list">
            <li><a href="#">Telegram</a></li>
            <li><a href="#">VK</a></li>
            <li><a href="#">YouTube</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">&copy; {currentYear} InfoCoffe. Все права защищены.</p>
      <div class="footer__legal">
        <a href="#">Политика конфиденциальности</a>
        <a href="#">Публичная оферта</a>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  .footer {
    padding: 80px 0 40px;
    background: #0a0908;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    color: #fff;

    &__grid {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 60px;
      margin-bottom: 60px;

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: 40px;
      }
    }

    &__logo {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 28px;
      font-weight: 800;
      margin-bottom: 20px;
      color: #fff;

      &-img {
        width: 32px;
        height: 32px;
        object-fit: contain;
      }
    }

    &__tagline {
      color: rgba(255, 255, 255, 0.5);
      max-width: 260px;
      line-height: 1.5;
    }

    &__nav {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;

      @media (max-width: 480px) {
        grid-template-columns: 1fr;
        gap: 30px;
      }
    }

    &__title {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 24px;
      color: #fff;
    }

    &__list {
      list-style: none;
      padding: 0;
      margin: 0;

      li {
        margin-bottom: 12px;
      }

      a {
        color: rgba(255, 255, 255, 0.5);
        transition: color 0.2s;

        &:hover {
          color: #c2815e;
        }
      }
    }

    &__bottom {
      padding-top: 40px;
      border-top: 1px solid rgba(255, 255, 255, 0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    &__copyright {
      color: rgba(255, 255, 255, 0.3);
      font-size: 14px;
      margin: 0;
    }

    &__legal {
      display: flex;
      gap: 30px;

      a {
        color: rgba(255, 255, 255, 0.3);
        font-size: 14px;
        transition: color 0.2s;

        &:hover {
          color: #fff;
        }
      }
    }
  }
</style>

<div id="interactive-overlay" class="interactive-overlay">
  <button class="interactive-overlay__close" aria-label="Закрыть">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  <div class="interactive-overlay__content">
    <div class="interactive-overlay__text">
      Мокапы полностью интерактивны
      <br /><br />
      <span>Вы можете взаимодействовать с ними,<br />чтобы ознакомиться с интерфейсом</span>
    </div>
  </div>
</div>

<script>
  const overlay = document.getElementById('interactive-overlay');
  const closeBtn = overlay?.querySelector('.interactive-overlay__close');

  function showOverlay() {
    if (!overlay) return;
    
    overlay.classList.add('is-visible');
    document.body.classList.add('overlay-open');
  }

  function closeOverlay() {
    if (!overlay) return;
    overlay.classList.remove('is-visible');
    document.body.classList.remove('overlay-open');
  }

  // Listen for trigger from mockup
  document.addEventListener('overlay:open', () => {
    showOverlay();
  });

  // Close on click anywhere
  overlay?.addEventListener('click', (e) => {
    closeOverlay();
  });

  closeBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    closeOverlay();
  });
</script>

<style lang="scss">
  .interactive-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s ease;
    pointer-events: none;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 40px;

    &.is-visible {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    &__content {
      position: relative;
      width: 100%;
      max-width: 1200px;
      text-align: center;
      transform: scale(0.9);
      transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);

      .is-visible & {
        transform: scale(1);
      }
    }

    &__close {
      position: fixed;
      top: 40px;
      right: 40px;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: #fff;
      cursor: pointer;
      padding: 15px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      z-index: 10000;
      backdrop-filter: blur(10px);

      svg {
        width: 48px;
        height: 48px;
      }

      &:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: rotate(90deg) scale(1.1);
      }
    }

    &__text {
      font-size: 48px;
      line-height: 1.2;
      color: #fff;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: -0.02em;
      
      span {
        display: block;
        background: linear-gradient(90deg, #ff9d00, #ff5e00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-top: 10px;
      }

      text-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }
  }

  :global(body.overlay-open) {
    overflow: hidden;
  }

  @media (max-width: 1024px) {
    .interactive-overlay {
      &__text {
        font-size: 36px;
      }
      &__close {
        top: 20px;
        right: 20px;
        svg {
          width: 32px;
          height: 32px;
        }
      }
    }
  }

  @media (max-width: 768px) {
    .interactive-overlay {
      padding: 20px;
      &__text {
        font-size: 28px;
      }
    }
  }
</style>
